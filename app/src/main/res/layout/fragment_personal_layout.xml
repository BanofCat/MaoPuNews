<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:background="@color/light_grey"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/info"
                android:textColor="#000000"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/goto_logo"
                android:textSize="20dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:drawableLeft="@drawable/app_logo"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/selectable_background"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="这是个人中心fragment"/>

            <LinearLayout
                android:divider="@drawable/diver_shape"
                android:showDividers="middle"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/selectable_background"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/collection"
                    android:textColor="#000000"
                    android:drawableRight="@drawable/goto_logo"
                    android:textSize="20dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"

                    android:drawableLeft="@drawable/collect_logo"
                    android:layout_weight="1"
                    android:text="新闻收藏列表"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/apply"
                    android:textColor="#000000"
                    android:drawableRight="@drawable/goto_logo"
                    android:textSize="20dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"

                    android:drawableLeft="@drawable/apply_logo"
                    android:layout_weight="1"
                    android:text="场地申请列表"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/setting"
                    android:textColor="#000000"
                    android:drawableRight="@drawable/goto_logo"
                    android:textSize="20dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/setting_logo"
                    android:layout_weight="1"
                    android:text="设置"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <Button
                android:id="@+id/logout"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/toolbar_color"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="退出登录"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                />


        </LinearLayout>


    </ScrollView>



</LinearLayout>